{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "es2017",
        "esnext.asynciterable",
        "DOM",        
      ],
      "paths": {
          "tslib" : ["./node_modules/tslib/tslib.d.ts"]
      },
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules"
    ]
  }